package de.buffalodan.ci.network;

public class Connection {

	private Neuron n1;
	private Neuron n2;
	private double weight;

	public Connection(Neuron n1, Neuron n2, double weight) {
		super();
		this.n1 = n1;
		this.n2 = n2;
		this.weight = weight;
	}

	public void setWeight(double weight) {
		this.weight = weight;
	}

	public double getWeight() {
		return weight;
	}

	public Neuron getN1() {
		return n1;
	}

	public Neuron getN2() {
		return n2;
	}
}
